<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#d6d7d7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/ivImageFlags"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/index" />

            <TextView
                android:id="@+id/tvCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/ivImageFlags"
                android:text="Brasil"
                android:textSize="@dimen/font_size_row" />

            <TextView
                android:id="@+id/tvCotacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cotacao_row"
                android:textSize="@dimen/font_size_row"
                android:layout_above="@+id/tvValueCotacao"
                android:layout_alignLeft="@+id/tvCountry"
                android:layout_alignStart="@+id/tvCountry" />

            <TextView
                android:id="@+id/tvVariacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_variacao_row"
                android:textSize="@dimen/font_size_row"
                android:layout_alignTop="@+id/tvCotacao"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="80dp"
                android:layout_marginEnd="80dp" />

            <TextView
                android:id="@+id/tvValueCotacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"
                android:textSize="@dimen/font_size_row"
                android:layout_alignBottom="@+id/ivImageFlags"
                android:layout_alignRight="@+id/tvCotacao"
                android:layout_alignEnd="@+id/tvCotacao" />

            <TextView
                android:id="@+id/tvValueVariacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.00"
                android:textSize="@dimen/font_size_row"
                android:layout_alignTop="@+id/tvValueCotacao"
                android:layout_alignRight="@+id/tvVariacao"
                android:layout_alignEnd="@+id/tvVariacao" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>